{
    "name": "@dpdfe/tools",
    "version": "0.0.7",
    "scripts": {
        "dev": "vite",
        "build": "NODE_ENV=production vite build && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
        "serve": "vite preview",
        "lint": "npm-run-all -p lint:fix lint:script lint:style",
        "lint:fix": "prettier --loglevel=error -w src",
        "lint:script": "eslint --fix --ext .ts,tsx src",
        "lint:style": "stylelint --fix src/**/*.{css,less}",
        "test": "jest"
    },
    "main": "dist/tools.umd.js",
    "module": "dist/main.js",
    "style": "dist/style.css",
    "types": "dist/main.d.ts",
    "dependencies": {
        "js-levenshtein": "^1.1.6"
    },
    "devDependencies": {
        "@types/jest": "^27.0.2",
        "@types/js-levenshtein": "^1.1.0",
        "@types/node": "^16.11.7",
        "@typescript-eslint/eslint-plugin": "^5.3.1",
        "@typescript-eslint/parser": "^5.3.1",
        "@vitejs/plugin-vue": "^1.9.4",
        "autoprefixer": "^10.4.0",
        "esbuild-runner": "^2.2.1",
        "eslint": "^8.2.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jsdoc": "^37.0.3",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.3.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.4.1",
        "stylelint": "^14.0.1",
        "stylelint-config-recommended": "^6.0.0",
        "stylelint-config-standard": "^23.0.0",
        "ts-jest": "^27.0.7",
        "ts-node": "^10.4.0",
        "tsc-alias": "^1.4.0",
        "typescript": "^4.3.2",
        "vite": "^2.6.4",
        "vue": "3"
    }
